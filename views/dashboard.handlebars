{{#if Posts}}
  {{#each Posts as |post|}}
    <div class='row'>
      <div class='card'>
        <div class='card-header'>{{post.title}}</div>
        <div class='card-body'>
          <p class='card-text'>
            {{post.content}}
          </p>
          <a href='/blogpage.html' class='btn btn-primary'>Add Comment</a>
        </div>
        <div class='card-footer text-muted' id="delete-post">
          <a href='/edit-blog'>Edit Blog</a>
          <button id='delete-post-button' data-id="{{post.id}}">Delete Post</button>
        </div>
      </div>
    </div>
  {{/each}}
{{/if}}

<div class='row'>
  <a href='/create-blog' id='add-post-link'>Add Post</a>
</div>