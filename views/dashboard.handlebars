{{#if blogs}}
  {{#each blogs as |blog|}}
    <div class='row'>
      <div class='card'>
        <div class='card-header'>{{blog.title}}</div>
        <div class='card-body'>
          <p class='card-text'>
            {{blog.content}}
          </p>
          <a href='/blogpage.html' class='btn btn-primary'>Go somewhere</a>
        </div>
        <div class='card-footer text-muted'>
          <a href='/edit-blog.html'>Edit Blog</a>
          <button id='delete-post-button'>Delete Post</button>
        </div>
      </div>
    </div>
  {{/each}}
{{/if}}

<div class='row'>
  <a href='/add-post.html' id='add-post-button'>Add Post</a>
</div>